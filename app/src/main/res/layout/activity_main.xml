<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.TempControl.AppBarOverlay">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:padding="@dimen/appbar_padding"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/view_pager"
        app:layout_anchorGravity="center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

<!--        <com.google.android.material.tabs.TabLayout-->
<!--            android:id="@+id/tabs"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="?attr/colorPrimary" />-->

    </androidx.viewpager.widget.ViewPager>

<!--    <ImageView-->
<!--        android:id="@+id/imageView2"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="top|end"-->
<!--        android:layout_marginVertical="65dp"-->
<!--        app:srcCompat="@drawable/AC_On" />-->

    <TextView
        android:id="@+id/B1Current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginVertical="65dp"
        android:minHeight="?actionBarSize"
        android:padding="@dimen/appbar_padding"
        android:text="Current temp: 50"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />



    <!--    <ScrollView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_centerHorizontal="true">-->

    <Button
        android:id="@+id/Bedroom1"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_margin="100dp"
        android:text="Bedroom 1"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/B2Current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginVertical="200dp"
        android:minHeight="?actionBarSize"
        android:padding="@dimen/appbar_padding"
        android:text="Current temp: 100"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

    <Button
        android:id="@+id/Bedroom2"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="Bedroom 2"
        android:textSize="30dp"
        android:layout_gravity="top|center"
        android:layout_margin="235dp"/>

        <TextView
            android:id="@+id/B3Current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginVertical="150dp"
            android:minHeight="?actionBarSize"
            android:padding="@dimen/appbar_padding"
            android:text="Current temp: 70"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />


    <Button
        android:id="@+id/Bedroom3"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="115dp"
        android:text="Bedroom 3"
        android:textSize="30dp" />

    <!--    </ScrollView>-->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
